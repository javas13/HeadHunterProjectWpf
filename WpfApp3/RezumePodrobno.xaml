                <materials:PackIcon Kind="ArrowBackCircle" Foreground="White" Width="40" Height="40" ></materials:PackIcon>
            </Button>
            <Button Style="{StaticResource buttonstyle1}" Height="40" Width="100" Margin="5,0,0,0" Foreground="White"   FontFamily="/WpfApp3;component/Fonts/#Roboto" Click="Button_Click_1" >
